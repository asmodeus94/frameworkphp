{% extends "base.twig" %}
{% from "macro/message.twig" import print_messages %}

{% block body %}
    <div class="container-fluid bg-light py-3">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card card-body">
                    {{ print_messages(message) }}
                    <h3 class="text-center mb-4">User creator</h3>
                    <form action="{{ pathWithToken('user-add') }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control input-lg" placeholder="Login" name="user[login]" type="text" value="{{ user.login }}">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" placeholder="Nick" name="user[nick]" type="text" value="{{ user.nick }}">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" placeholder="E-mail Address" name="user[email]" type="text" value="{{ user.email }}">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" placeholder="Password" name="user[password]" type="password">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" placeholder="Confirm Password" name="user[password2]" type="password">
                            </div>
                            <input class="btn btn-lg btn-primary btn-block" value="Create" type="submit">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}